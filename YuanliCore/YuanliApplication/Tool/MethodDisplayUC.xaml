<UserControl x:Class="YuanliApplication.Tool.MethodDisplayUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YuanliApplication.Tool"
             mc:Ignorable="d" 
              x:Name="Method_UC"
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid DataContext="{Binding ElementName=Method_UC}" Background="AntiqueWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="1.0*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Content="{Binding SN}"   FontSize="24" BorderThickness="1.5" BorderBrush="Black" />
        <Label Content="{Binding MethodName}" FontSize="24"  BorderThickness="1.5" BorderBrush="Black"  Grid.Column="1" />
        <Label Content="{Binding ResultName}" FontSize="24"  BorderThickness="1.5" BorderBrush="Black"  Grid.Column="2" />
    </Grid>
</UserControl>
