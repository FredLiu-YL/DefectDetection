<Window x:Class="YuanliCore.ImageProcess.Caliper.CogCaliperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YuanliCore.ImageProcess.Caliper" 
  
        mc:Ignorable="d"
        x:Name="CaliperWindow"
        Title="Window1" Height="600" Width="960">
    <Grid   DataContext="{Binding ElementName=CaliperWindow}"   >

        <local:CogCaliperControl Image="{Binding CogImage}" CaliperParam="{Binding CaliperParam}"   />
    </Grid>
</Window>
